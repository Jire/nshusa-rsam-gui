<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" prefHeight="504.0" prefWidth="763.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.softgate.controller.Controller">
   <left>
      <VBox prefHeight="504.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="listView" VBox.vgrow="ALWAYS">
               <contextMenu>
                  <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#renameStore" text="Rename" />
                        <MenuItem mnemonicParsing="false" onAction="#dumpIndex" text="Dump" />
                    </items>
                  </ContextMenu>
               </contextMenu>
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </ListView>
            <TextField fx:id="indexTf" alignment="CENTER" promptText="Search..." style="-fx-background-image: url('images/search_icon.png'); -fx-background-repeat: no-repeat; -fx-background-position: left center;">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <tooltip>
                  <Tooltip text="Search for an Index by its name or id" />
               </tooltip>
            </TextField>
         </children>
      </VBox>
   </left>
   <center>
      <VBox BorderPane.alignment="TOP_CENTER">
         <children>
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
              <columns>
                  <TableColumn fx:id="iconCol" prefWidth="45.0" text="Icon" />
                <TableColumn fx:id="idCol" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="nameCol" minWidth="100.0" prefWidth="100.0" text="Name" />
                  <TableColumn fx:id="extCol" prefWidth="107.0" text="Extension" />
                  <TableColumn fx:id="sizeCol" prefWidth="91.0" text="Size" />
              </columns>
               <VBox.margin>
                  <Insets right="5.0" top="5.0" />
               </VBox.margin>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#addEntry" text="Add" />
                        <MenuItem mnemonicParsing="false" onAction="#renameArchive" text="Rename" />
                        <MenuItem mnemonicParsing="false" onAction="#removeEntry" text="Remove" />
                        <MenuItem mnemonicParsing="false" onAction="#replaceEntry" text="Replace" />
                        <MenuItem mnemonicParsing="false" onAction="#dumpEntry" text="Dump" />
                        <MenuItem mnemonicParsing="false" onAction="#clearIndex" text="Clear" />
                    </items>
                  </ContextMenu>
               </contextMenu>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <TextField fx:id="fileTf" alignment="CENTER" promptText="Search..." style="-fx-background-image: url('images/search_icon.png'); -fx-background-repeat: no-repeat; -fx-background-position: left center;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="Search a file by its name or id" />
                     </tooltip>
                  </TextField>
                  <Button fx:id="addEntryBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addEntry" text="Add" HBox.hgrow="SOMETIMES">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="This button adds a file into the selected Index" />
                     </tooltip>
                  </Button>
                  <Button fx:id="deleteEntryBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#removeEntry" text="Delete">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="This button deletes a file from the selected Index" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <VBox alignment="CENTER_RIGHT">
         <children>
            <StackPane>
               <children>
                  <HBox alignment="CENTER" layoutX="327.0" layoutY="3.0" VBox.vgrow="NEVER">
                     <children>
                        <Label fx:id="appTitle" text="RS2 Asset Manager" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" layoutX="712.0" layoutY="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="3.0">
                     <children>
                        <Button fx:id="minBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#minimizeProgram" prefHeight="20.0" prefWidth="45.0" />
                        <Button fx:id="maxBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="20.0" prefWidth="45.0" />
                        <Button fx:id="closeBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#closeProgram" prefHeight="20.0" prefWidth="45.0" />
                     </children>
                  </HBox>
               </children>
            </StackPane>
            <HBox>
               <children>
                <Button fx:id="loadBtn" mnemonicParsing="false" onAction="#loadFS" text="Load">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="This button loads the cache" />
                     </tooltip>
                  </Button>
                  <Button fx:id="clearBtn" mnemonicParsing="false" onAction="#clearProgram" text="Clear">
                     <HBox.margin>
                        <Insets right="5.0" top="5.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="This button clears the editor" />
                     </tooltip>
                  </Button>
                  <StackPane>
                     <children>
                        <ProgressBar fx:id="progressBar" onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" prefHeight="28.0" prefWidth="454.0" progress="0.0" visible="false" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="5.0" top="5.0" />
                           </HBox.margin>
                        </ProgressBar>
                        <Text fx:id="progressText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
</BorderPane>
